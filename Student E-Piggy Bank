<html>
<head>
<body>
<script>
    // Global balance variable
    let balance = 0;
    let accountName = "";
    let accountCreated = false;

    function showMessage(msg) {
        document.getElementById("messageBox").innerText = msg;
    }

    // Create Account
    function createAccount() {
        const name = document.getElementById("studentname").value.trim();
        const password = document.getElementById("password").value;

        if (!name) {
            alert("‚ùó Please enter your name.");
            return;
        }

        if (!password) {
            alert("‚ùó Please enter a password.");
            return;
        }

        accountCreated = true;
        accountName = name;
        balance = 0;

        alert("üéâ Account created successfully for " + name + "!");
        showMessage("Account created successfully for " + name + "!");
    }

    // Deposit Money
    function submitDeposit() {
        if (!accountCreated) {
            alert("‚ö† Please create an account first.");
            return;
        }

        const amount = parseInt(document.getElementById("depositAmount").value);

        if (!amount || amount <= 0) {
            alert("‚ùó Please enter a valid amount to deposit.");
            return;
        }

        balance += amount;

        alert("üí∞ Deposit Successful!\nYou deposited: ‚Çπ" + amount + "\nNew Balance: ‚Çπ" + balance);
        showMessage("‚Çπ" + amount + " deposited successfully!");
    }

    // Withdraw Money
    function submitWithdraw() {
        if (!accountCreated) {
            alert("‚ö† Please create an account first.");
            return;
        }

        const amount = parseInt(document.getElementById("withdrawAmount").value);

        if (!amount || amount <= 0) {
            alert("‚ùó Please enter a valid withdrawal amount.");
            return;
        }

        if (amount > balance) {
            alert("‚ùå Insufficient balance!\nYour current balance is ‚Çπ" + balance);
            return;
        }

        balance -= amount;

        alert("üèß Withdrawal Successful!\nYou withdrew: ‚Çπ" + amount + "\nNew Balance: ‚Çπ" + balance);
        showMessage("‚Çπ" + amount + " withdrawn successfully!");
    }

    // Check Balance
    function checkBalance() {
        if (!accountCreated) {
            alert("‚ö† Please create an account first.");
            return;
        }

        alert("üìä Current Balance: ‚Çπ" + balance);
        showMessage("Your balance is ‚Çπ" + balance);
    }
</script>
  </body>
  </head>
  </html>
